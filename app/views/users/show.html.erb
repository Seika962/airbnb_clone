<div class="row ml-3">
    <div class="col-3 px-0">
        <div class="card bg-light mx-0", style="max-width: 18rem;">
            <%=image_tag avatar_url(@user), class:"card-img-top"%>
            <div class="card-header">Verification</div>
            <div class="card-body">
            <table>
            <tr>
                <td class="col-11">
                    <% if @user.email %>
                        Email Address
                    <% end %>
                </td>
                <td class="col-1">
                    <i class="fa fa-check-circle text-right"></i>
                </td>
            </tr>
            <tr>
                <td class="col-11">
                    <% if @user.phone_number %>
                    Phone Number
                    <% end %>
                </td>
                <td class="col-1">
                    <i class="fa fa-check-circle text-right"></i>
                </td>
            </tr>
            </table>
                
            </div>
        </div>
    </div>
    <div class="col-8 px-0">
        <div class="card bg-light ml-4">
            <h5 class="card-header"><%= @user.fullname %></h5>
            <div class="card-body">
               
            </div>
        </div>
    </div>
</div>