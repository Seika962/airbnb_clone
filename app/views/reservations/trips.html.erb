<div class="row">
    <div class="col-3">
        <%= render "rooms/listing_sidebar" %>
    </div>
    <div class="col-9">
        <div class="card bg-light">
            <div class="card-header"></div>
            <div class="card-body">
                <table class="w-100">
                    <% @reservations.each do |reservation| %>
                        <tr class="border-bottom">
                            <td><%= reservation.start_date.strftime('%v') %></td>
                            <td class="w-30 py-2">
                               <%=link_to image_tag(reservation.room.photos.first.image.url, size:"100"), room_path(reservation.room) %>
                            </td>
                            <td class="w-50 px-3">
                                <p class="font-weight-bold mb-1"><%= reservation.room.listing_name %></p>
                                <%= image_tag(avatar_url(reservation.room.user),alt:"profile-picture", size:"25", class:"mr-2 rounded-circle") %>
                                <%= link_to reservation.room.user.fullname, user_path(reservation.room.user), class:"text-decoration-none text-dark" %>
                            </td>
                            <td class="w-20 text-right"><%= render partial: "reviews/guest_form", locals: {reservation: reservation} %></td>
                        </tr>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</div>