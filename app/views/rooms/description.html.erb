<div class="row">
    <div class="col-3">
        <%= render "rooms/sidebar" %>
    </div>
    <div class="col-9">
        <div class="card bg-light ml-4">
            <h5 class="card-header">Listing name</h5>
            <%=form_for(@room) do |f|%>
                <div class="px-2">
                    <div class="card-body">
                        <div class="form-group">
                            <%= f.label :listing_name, "Listing Name" %> <br>
                            <%= f.text_field :listing_name, placeholder:"What is your listing name", class:"form-control form-control-lg" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :description, "Summary" %> <br>
                            <%= f.text_area :description, placeholder:"Summary of your house", class:"form-control form-control-lg" %>
                        </div>
                    <div>
                        <%= f.submit "Save", class:"btn btn-dark d-block mx-auto my-2 px-5"%>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>